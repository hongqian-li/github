import java.util.Random;

public class Lucky7 {

    public static void main(String[] args) {
        int playerMoney = 5; // The player has 5â‚¬

        while (playerMoney > 0) {
            playerMoney -= 1;

            // Generate random numbers
            int num1 = generateRandomNumber();
            int num2 = generateRandomNumber();
            int num3 = generateRandomNumber();

            System.out.println("The first number is " + num1);
            System.out.println("The Second number is " + num2);
            System.out.println("The third number is " + num3);

            // Checks if any of the three numbers is equal to 7.
            int numOfSevens = 0;
            if (num1 == 7) {
                numOfSevens++;
            }
            if (num2 == 7) {
                numOfSevens++;
            }
            if (num3 == 7) {
                numOfSevens++;
            }

    }

    // Create 3 numbers that are between 1-10
    private static int generateRandomNumber() {
        Random randomNum = new Random();
        return randomNum.nextInt(10) + 1;
    }
}
